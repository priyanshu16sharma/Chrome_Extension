{
    "manifest_version": 3,
    "name": "Tab Title Extension",
    "version": "1.0",
    "description": "Get the title of the current tab",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}